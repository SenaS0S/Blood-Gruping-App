{
  "name": "blood-grouping-app",
  "version": "1.0.0",
  "description": "AI Blood Grouping Analyzer Desktop Application",
  "main": "main.js",
  "author": "SenaS0S",
  "scripts": {
    "start": "NODE_ENV=development electron .",
    "pyinstaller": "pyinstaller --noconfirm --onefile --windowed --add-data 'templates:templates' --add-data 'models:models' --add-data 'schema.sql:.' --name app app.py --distpath dist_py",
    "build": "npm run pyinstaller && electron-builder"
  },
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1"
  },
  "build": {
    "appId": "com.sena.bloodgroupingapp",
    "extraResources": [
      {
        "from": "./dist_py/",
        "to": "dist_py",
        "filter": [
          "**/*"
        ]
      }
    ]
  }
}